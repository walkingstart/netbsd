# .shrc file for sh(1).

#ll(){ ls -l ${1+"$@"}; }

case "$-" in *i*)
	if /bin/test -z "${HOST}"; then
		HOST="$(hostname)"
	fi
	PS1="${USER}@${HOST%%.*} $PS1"
	set -o emacs
	;;
esac

if [ -f ~/.aliasrc ]; then
    . ~/.aliasrc
fi

